<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="498.0" prefWidth="460.0" spacing="20.0" stylesheets="@profile.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.ProfileController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label style="-fx-font-weight: bold;" text="Informations personnelles" />
    <VBox prefHeight="138.0" prefWidth="415.0" spacing="10" style="-fx-border-color: #C39BD3; -fx-border-width: 1; -fx-padding: 10; -fx-border-radius: 10;" styleClass="card">
        <ImageView fitHeight="37.0" fitWidth="40.0">
            <Image url="@avatar.png" />
        </ImageView>
        <HBox>

            <Label text="Nom:" />
            <Label fx:id="nameLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Email:" />
            <Label fx:id="emailLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Téléphone:" />
            <Label fx:id="phoneNumberLabel" />
        </HBox>
    </VBox>
    <Label style="-fx-font-weight: bold;" text="Informations du cabinet" />
    <VBox spacing="10" style="-fx-border-color: #C39BD3; -fx-border-width: 1; -fx-padding: 10; -fx-border-radius: 10;" styleClass="card">
        <HBox spacing="10">
            <Label text="Nom du cabinet:" />
            <Label fx:id="cabinetNameLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Gouvernorat:" />
            <Label fx:id="governorateLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Numéro de licence:" />
            <Label fx:id="numeroLicenceLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Rue:" />
            <Label fx:id="rueLabel" />
        </HBox>
    </VBox>
   <Button mnemonicParsing="false" style="-fx-background-color: #C39BD3;" text="Modifier Profile" textFill="#fffafa" />
</VBox>
