<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="568.0" prefWidth="460.0" spacing="10" stylesheets="@addfiche.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.demo1.AddFicheController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox />


    <Label style="-fx-font-weight: bold;" text="Ajouter une fiche ici" />
    <TextField fx:id="nomPField" prefHeight="30.0" prefWidth="421.0" promptText="Nom du patient" />
    <TextField fx:id="prenomPField" promptText="Prénom du patient" />
    <TextField fx:id="cinPField" promptText="CIN du patient" />
    <TextField fx:id="typeAnimalField" promptText="Type d'animal" />
    <TextField fx:id="nomAField" promptText="Nom de l'animal" />
    <TextField fx:id="idAField" promptText="ID de l'animal" />
    <TextField fx:id="raisonField" promptText="maladie" />
    <DatePicker fx:id="datePicker" />
    <TextArea fx:id="prescriptionField" prefRowCount="4" promptText="Prescription" />

    <HBox spacing="10">
        <Button onAction="#ajouterFiche" text="Ajouter" />
        <Button onAction="#reinitialiserChamps" text="Réinitialiser" />
    </HBox>
</VBox>
