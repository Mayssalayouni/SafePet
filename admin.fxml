        </ImageView>
        <Text id="petText" text="PET">
            <fill>
                <LinearGradient endX="1.0" endY="0.0">
                    <stops>
                        <Stop color="#af7ac5" offset="0.3" />
                        <Stop color="black" offset="0.5" />

                    </stops>
                </LinearGradient>
            </fill>
        </Text>
